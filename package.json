{
  "name": "like-rider",
  "displayName": "Like Rider",
  "description": "Smart auto-completion for `var`, `await`, `if`, and `return` in C#.",
  "version": "0.0.6",
  "publisher": "like-rider",
  "icon": "media/Like_Rider_Gemini_Generated_Image_p5bf4up5bf4up5bf.jpeg",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "contributes": {
    "languages": [
        {
            "id": "csharp",
            "extensions": [".cs"],
            "aliases": ["C#", "csharp"]
        }
    ],
    "commands": [
      {
        "command": "Like Rider New Template",
        "title": "New C# Template",
        "category": "LikeRider"
      }
    ]
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/even1101/Like_Rider.git"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
